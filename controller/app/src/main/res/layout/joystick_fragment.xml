<?xml version="1.0"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:id="@+id/linearLayout1">

    </LinearLayout>
    <RelativeLayout
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:id="@+id/horizontal_joystick"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:background="@drawable/joystick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp">
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:id="@+id/vertical_joystick"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:background="@drawable/joystick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="40dp" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/directionText"
        android:textSize="20dp"
        android:textColor="#444444"
        android:text="Direction: "
        android:layout_below="@+id/xposText"
        android:layout_alignStart="@+id/horizontal_joystick" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/xposText"
        android:textSize="20dp"
        android:textColor="#444444"
        android:text="X: "
        android:layout_below="@+id/linearLayout1"
        android:layout_alignStart="@+id/directionText" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/directionText2"
        android:textSize="20dp"
        android:textColor="#444444"
        android:text="Direction: "
        android:layout_below="@+id/yposText"
        android:layout_alignStart="@+id/vertical_joystick" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/yposText"
        android:textSize="20dp"
        android:textColor="#444444"
        android:text="Y: "
        android:layout_below="@+id/linearLayout1"
        android:layout_alignStart="@+id/directionText2" />

    <ImageButton
        android:layout_width="151dp"
        android:layout_height="126dp"
        android:id="@+id/powerButton"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/linearLayout1"
        android:onClick="usePowerup"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/connectButton"
        android:layout_below="@+id/powerButton"
        android:layout_centerHorizontal="true"
        android:onClick="chooseCar"/>

</RelativeLayout>
